@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card" style=" margin-top: 20px">
    <div class="card-header">
       
        <h3>Skanky Old Buses - Destination and Cost</h3>
        
    </div>
    <div class="card-body">
       

        <form method="post">
            <div class="form-group">
                <div class="row">
                    <label asp-for="@Model.travelCosts.FName" class="col-lg-2"></label>
                    <input type="text" asp-for="@Model.travelCosts.FName" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.LName" class="col-lg-2"></label>
                    <input type="text" asp-for="@Model.travelCosts.LName" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.Age" class="col-lg-2"></label>
                    <input type="number" asp-for="@Model.travelCosts.Age" class="col-lg-2" />

                </div>

                <div class="row">
                    <label asp-for="@Model.travelCosts.IsDisabled" class="col-lg-2 text-danger"></label>
                    <input  asp-for="@Model.travelCosts.IsDisabled" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.IsWeekend" class="col-lg-2 text-danger"></label>
                    <input  asp-for="@Model.travelCosts.IsWeekend" class="col-lg-2" />

                </div>


                <div class="row">
                    <label asp-for="@Model.travelCosts.Ash" class="col-lg-2 text-success" ></label>
                    <input type="number" asp-for="@Model.travelCosts.Ash" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.Tim" class="col-lg-2 text-success"></label>
                    <input type="number" asp-for="@Model.travelCosts.Tim" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.Om" class="col-lg-2 text-success"></label>
                    <input type="number" asp-for="@Model.travelCosts.Om" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.Dun" class="col-lg-2 text-success"></label>
                    <input type="number" asp-for="@Model.travelCosts.Dun" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.Inv" class="col-lg-2 text-success"></label>
                    <input type="number" asp-for="@Model.travelCosts.Inv" class="col-lg-2" />
                    <label asp-for="@Model.travelCosts.Discount" class="col-lg-2 text-success"></label>
                    <input type="number" asp-for="@Model.travelCosts.Discount" class="col-lg-2" />

                   


                </div>

                <div class="row">
                    <input type="submit" value="Submit" asp-action="Index" />
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <h3>All fares</h3>

        <div class="row">
            <label asp-for="@Model.CityFares" class="col-lg-2"></label>
            <ul>
                @foreach (var item in Model.CityFares)
                {
<li name="cityFares" value="@item">@item</li>
                }

            </ul>
        </div>
    </div>
</div>